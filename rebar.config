{erl_opts, [debug_info]}.

{deps, [elli,
        {opentelemetry_api,
         {git, "http://github.com/open-telemetry/opentelemetry-erlang-api",
          {branch, "master"}}},
       {opentelemetry,
         {git, "http://github.com/open-telemetry/opentelemetry-erlang",
          {branch, "master"}}}]}.

{project_plugins, [{rebar_covertool, "1.1.0"}]}.

{profiles, [{test, [{erl_opts, [nowarn_export_all]}]}]}.

{cover_enabled, true}.
{cover_opts, [verbose]}.
{cover_export_enabled, true}.
{covertool, [{coverdata_files, ["ct.coverdata"]}]}.

{ct_opts, [{ct_hooks, [cth_surefire]}]}.
